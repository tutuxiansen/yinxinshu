<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xhhy.dao.LoginDao">
<!-- 配置映射关系 -->
	<resultMap type="com.xhhy.domain.UserBean" id="user">
		<id column="userid"   property="userId" />
		<result column="username" javaType="String" property="userName" jdbcType="VARCHAR"/>
		<result column="passwords"   javaType="String" property="passWord"  jdbcType="VARCHAR"/>
		<result column="uuname" javaType="String" property="uuName" jdbcType="VARCHAR"/>
	</resultMap>

	<!-- 映射到UserDao的方法 -->
	<select id="queryUser" parameterType="Map"  resultMap="user">
		 select * from users_tb
		 where 1 = 1
		 <if test="username != null and username != ''">
				and username= #{username}
			</if>
			<if test="password != null and password !=''">
				and passwords =#{password}
			</if> 
	</select>
	
		<select id="queryByuserName" parameterType="Map"  resultMap="user">
		 select * from users_tb
		 where 1 = 1
		 <if test="username != null and username != ''">
				and username= #{username}
			</if>
	</select>
	
</mapper>